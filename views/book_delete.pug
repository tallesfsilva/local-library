extends layout

block content
  h1 #{title}: #{book.title}
   

  if book_instance.length
     p #[strong This book has #{book_instance.length} intances.]
     p.text-warning You need to delete the following book instance before attempting to delete this Book.
 
     div(style='margin-left:20px;margin-top:20px')

        h4 Book Instances    
        
        each book in book_instance
            span #[strong ID: ]
            a(href=book.url) #{book.id}
            p #[strong Imprint:] 
              span #{book.imprint}
            p #[strong Status: ] 
              span #{book.status}
            p #[Strong Due Back:] 
              span #{book.due_back}
            br
            br
  else
    p Book does not have any instances created
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
        div.form-group
            input#bookrid.form-control(type='hidden',name='bookid', required='true', value=book._id )

        button.btn.btn-primary(type='submit') Delete

    